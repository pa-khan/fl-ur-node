                    <!--v-if-->
                  </div>
                  if !cartIsOrder
                    <div class="product__button-remove nk">
                      <svg class="icon icon_trash">
                        <use xlink:href="#icon-trash"></use>
                      </svg>
                    </div>
                    <!--v-if--><!--v-if--><!--v-if-->
                    <div class="incdec product__incdec nk" value="1">
                      <div class="incdec__button incdec__button_plus"></div>
