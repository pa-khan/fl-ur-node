include ../vars
doctype html
block vars
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title=title
    link(rel="stylesheet" href="https://unpkg.com/swiper@8/swiper-bundle.min.css")
    link(rel="stylesheet" href="template/css/style.css" + version)
  body
    .wrap
      include ../../blocks/icons/icons

      include ../../blocks/header/header
      +style('header', 'blocks')
      +script('header', 'blocks')
      main.main
        block content

      include ../../blocks/footer/footer
      +style('footer', 'blocks')

      include ../../blocks/alert/alert
      +style('alert', 'blocks')

      +script('field', 'components')
      +script('select', 'components')
      +script('tabs', 'components')
      script(src="https://unpkg.com/swiper@8/swiper-bundle.min.js")
      script(src="template/js/common.js" + version)
